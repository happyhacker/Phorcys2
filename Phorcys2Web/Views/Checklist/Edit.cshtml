@model Phorcys.Web.Models.ChecklistEditViewModel
@using Kendo.Mvc.UI

@{
    ViewData["Title"] = "Edit Checklist";
}

<h2>Edit Checklist</h2>

<form id="checklistForm" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.ChecklistId)

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label"></label>
        @(Html.Kendo().TextBoxFor(m => m.Title))

        @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    </div>

    @Html.HiddenFor(m => m.ItemsJson, new { id = "ItemsJson" })

    <h3>Items</h3>

    @Html.Partial("_ChecklistItemsGrid")

    <div class="mt-4">
        @(Html.Kendo().Button()
                .Name("saveButton")
                .HtmlAttributes(new { type = "submit", @class = "btn btn-normal" })
                //.Icon("save")
                .ImageUrl(Url.Content("~/icons/GreenCheckmark.png"))
                .Content("Save")
                )

        @(Html.Kendo().Button()
                .Name("cancelButton")
                .HtmlAttributes(new { @class = "btn btn-normal", onclick = "redirectToIndex();" })
                .ImageUrl(Url.Content("~/icons/RedXMark.png"))
                .Content("Cancel")
                )
    </div>
</form>

<script id="checklistExistingItems" type="application/json">
    @Html.Raw(Json.Serialize(ViewBag.ExistingItems ?? new List<object>()))
</script>
<div id="checklistFormConfig"
     data-cancel-url="@Url.Action("Index", "Checklist")"
     data-existing-items-id="checklistExistingItems"></div>

@section Scripts {
    <script src="~/js/pages/checklist-form.js"></script>
}
