@model Phorcys.Web.Models.ChecklistCreateViewModel
@using Kendo.Mvc.UI

@{
    ViewData["Title"] = "Create Checklist";
}

<h2>Create Checklist</h2>

<form id="checklistForm" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label"></label>
        @(Html.Kendo().TextBoxFor(m => m.Title))

        @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    </div>

    @Html.HiddenFor(m => m.ItemsJson, new { id = "ItemsJson" })

    <h3>Items</h3>

    @Html.Partial("_ChecklistItemsGrid")

    <div class="mt-4">
        @(Html.Kendo().Button()
                .Name("saveChecklistButton")
                .HtmlAttributes(new { type = "submit", @class = "btn btn-normal me-2" })
                .ImageUrl(Url.Content("~/icons/GreenCheckmark.png"))
                .Content("Save")
                )

        @(Html.Kendo().Button()
                .Name("cancelButton")
                .HtmlAttributes(new {
                    type = "button",
                    @class = "btn btn-normal",
                    onclick = "cancelAndExit();"
                })
                .ImageUrl(Url.Content("~/icons/RedXMark.png"))
                .Content("Cancel")
                )
    </div>

</form>

<div id="checklistFormConfig"
     data-cancel-url="/"
     data-existing-items-id=""></div>

@section Scripts {
    <script src="~/js/pages/checklist-form.js"></script>
}

