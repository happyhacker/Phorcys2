@model Phorcys.Web.Models.ChecklistCreateViewModel
@using Kendo.Mvc.UI

@{
    ViewData["Title"] = "Create Checklist";
}

<h2>Create Checklist</h2>

<form id="checklistForm" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label"></label>
        @(Html.Kendo().TextBoxFor(m => m.Title))

        @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    </div>

    @Html.HiddenFor(m => m.ItemsJson, new { id = "ItemsJson" })

    <h3>Items</h3>

    @Html.Partial("_ChecklistItemsGrid")

    <div class="mt-4">
        @(Html.Kendo().Button()
                .Name("saveChecklistButton")
                .HtmlAttributes(new { type = "submit", @class = "btn btn-normal me-2" })
                .ImageUrl(Url.Content("~/icons/GreenCheckmark.png"))
                .Content("Save")
                )

        @(Html.Kendo().Button()
                .Name("cancelButton")
                .HtmlAttributes(new {
                    type = "button",
                    @class = "btn btn-normal",
                    onclick = "cancelAndExit();"
                })
                .ImageUrl(Url.Content("~/icons/RedXMark.png"))
                .Content("Cancel")
                )
    </div>

</form>

@section Scripts {
    <script>
        $(document).ready(function () {

            var grid = $("#checklistItemsGrid").data("kendoGrid");

            // Ensure there is always at least one blank row on load
            function ensureInitialRow() {
                if (grid.dataSource.total() === 0) {
                    var newItem = grid.dataSource.add({
                        SequenceNumber: 1,
                        Title: ""
                    });

                    var row = grid.tbody.find("tr[data-uid='" + newItem.uid + "']");
                    grid.editCell(row.find("td:eq(2)")); // 0=drag,1=#,2=Title
                }
            }

             function resequence() {
                var data = grid.dataSource.data();
                for (var i = 0; i < data.length; i++) {
                    data[i].set("SequenceNumber", i + 1); // 1-based
                }
            }

            // Initial setup
            ensureInitialRow();
            resequence();

            // "Add Item" toolbar button
            $("#btnAddItem").on("click", function (e) {
                e.preventDefault();

                grid.closeCell();

                var data = grid.dataSource.data();
                var nextSeq = data.length + 1;

                var newItem = grid.dataSource.add({
                    SequenceNumber: nextSeq,
                    Title: ""
                });

                resequence();

                var row = grid.tbody.find("tr[data-uid='" + newItem.uid + "']");
                grid.editCell(row.find("td:eq(2)"));
            });

            // Resequence anytime data changes (add/remove/edit)
            grid.dataSource.bind("change", function (e) {
                resequence();
            });

            // Resequence after drag & drop
            grid.bind("rowReorder", function (e) {
                resequence();
            });

            // Prevent Enter inside the grid from submitting the form,
            // and instead: save this row's value, add a new row, focus it.
            $("#checklistItemsGrid").on("keydown", "input", function (e) {
                if (e.key === "Enter") {
                    e.preventDefault();
                    e.stopPropagation();

                    var $input = $(e.target);
                    var cell = $input.closest("td");
                    var row = cell.closest("tr");

                    // Get the dataItem for the row we're currently editing
                    var dataItem = grid.dataItem(row);

                    // Determine which field this column is bound to (e.g., "Title")
                    var cellIndex = cell.index();
                    var field = grid.columns[cellIndex] && grid.columns[cellIndex].field;

                    // Manually push the input value into the data item before closing the cell
                    if (field) {
                        dataItem.set(field, $input.val());
                    }

                    // Close the editor so the value is committed visually too
                    grid.closeCell();

                    // Now add a new blank row
                    var data = grid.dataSource.data();
                    var nextSeq = data.length + 1;

                    var newItem = grid.dataSource.add({
                        SequenceNumber: nextSeq,
                        Title: ""
                    });

                    resequence();

                    // Focus the Title cell of the new row
                    var newRow = grid.tbody.find("tr[data-uid='" + newItem.uid + "']");
                    grid.editCell(newRow.find("td:eq(2)")); // 0=drag,1=#,2=Title
                }
            });

            // Extra safety: if Enter is pressed anywhere inside the grid area,
            // don't let the form submit.
            $("#checklistForm").on("keydown", function (e) {
                if (e.key === "Enter" &&
                    $(e.target).closest("#checklistItemsGrid").length > 0) {
                    e.preventDefault();
                }
            });

            // Before submitting the form, serialize grid data into ItemsJson
            $("#checklistForm").on("submit", function (e) {
                grid.closeCell();

                resequence();

                var data = grid.dataSource.data();
                var items = [];

                for (var i = 0; i < data.length; i++) {
                    var item = data[i];
                    if (item.Title && item.Title.trim().length > 0) {
                        items.push({
                            Title: item.Title,
                            SequenceNumber: item.SequenceNumber
                        });
                    }
                }

                $("#ItemsJson").val(JSON.stringify(items));
            });
        });
                    
        function cancelAndExit() {
           window.location.href = '/';
         }

    </script>
}

